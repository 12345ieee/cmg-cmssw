#############################################################
# Makefile for Math_utils package
# Math_utils/src/GNUmakefile
##############################################################

OBJS =  Math.o matrix.o

%.o: %.cc ../Math_utils/*.[hi][hi]
	${CC} ${FLAGS} -c $<
.c.o:; gcc -c $*.c
.f.o:; ${F77} ${FLAGS} -c $*.f

all:   	lib

lib:	../../lib/libMath_utils.a

../../lib/libMath_utils.a:	${OBJS}
	echo '' > libMath_utils.a; rm libMath_utils.a;
	${AR} rcv libMath_utils.a ${OBJS}
	mv libMath_utils.a ../../lib/

clean:;	rm [^p]*.o

